<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <Title>S3Kira.AspNetCore</Title>
        <Description>ASP.NET extensions for S3Kira S3 client</Description>
        <Version>0.7.0</Version>
        <PackageId>Neoxack.S3Kira.AspNetCore</PackageId>
        <PackageTags>s3;performance</PackageTags>
        <PackageProjectUrl>https://github.com/neoxack/S3kira.AspNetCore</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>Semyon Dragunov</Copyright>
        <Authors>Semyon Dragunov (neoxack@gmail.com)</Authors>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath=""/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
      <PackageReference Include="Neoxack.S3Kira" Version="0.7.0" />
    </ItemGroup>

</Project>
